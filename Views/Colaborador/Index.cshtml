@model IEnumerable<AtividadeCibergestion.Models.Colaborador>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Código
        </th>
        <th>
            Nome
        </th>
        <th>
            Telefone
        </th>
        <th>
            Tipo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NomeColaborador)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelefoneColaborador)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoTelefone)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
